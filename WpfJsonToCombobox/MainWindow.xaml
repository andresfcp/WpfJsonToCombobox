<Window x:Class="WpfJsonToCombobox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfJsonToCombobox"
        mc:Ignorable="d"
        Title="Example of JSON to ComboBox" Height="450" Width="800">
    <StackPanel>
        <Label Content="Select Language:" 
               FontWeight="Bold"
               Width="200" Height="30" 
               Margin="5"/>
        <ComboBox x:Name="LanguageComboBox" 
                  Width="200" Height="30" 
                  Margin="5" 
                  SelectionChanged="LanguageComboBox_SelectionChanged"/>
        <Label Content="Name:" 
               FontWeight="Bold"
               Width="200" Height="30" 
               Margin="5"/>
        <TextBlock x:Name="NameTextBlock" 
                   Width="200" Height="30" 
                   Margin="5"/>
        <Label Content="Value:" 
               FontWeight="Bold"
               Width="200" Height="30" 
               Margin="5"/>
        <TextBlock x:Name="ValueTextBlock" 
                   Width="200" Height="30" 
                   Margin="5"/>
        <Button x:Name="ShowSelectionButton" 
                Content="Show Selection" 
                Width="100" Height="30" 
                Margin="5" 
                Click="ShowSelectionButton_Click"/>
    </StackPanel>
</Window>
